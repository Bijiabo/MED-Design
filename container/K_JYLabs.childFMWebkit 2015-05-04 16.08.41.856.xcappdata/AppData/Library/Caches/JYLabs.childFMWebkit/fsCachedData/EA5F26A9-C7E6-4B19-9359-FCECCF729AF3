    //满足可以搜索时的回调方法
    function canSubmit(data){
		 var obj=eval('(' + data + ')');
        	if(obj.desc==1||obj.desc=="1"){
        		var content=$("#searchInput").val();
                var SearchForm = document.createElement("FORM");  
                   document.body.appendChild(SearchForm);  
                   SearchForm.method = "POST";  
                   var input = document.createElement("input");  
                   input.setAttribute("name", "content");  
                   input.setAttribute("type", "hidden");  
                   SearchForm.appendChild(input);  
                   input.value = content;  
                   SearchForm.action = "/search/1.html";  
                   SearchForm.submit();
        	}else{
	            alert("您搜索过于频繁，请稍后再试！");
	            return false;
        	}
	    }
    
    //展开，收起
    $(document).ready(function(){
        var $clickBtn = $(".more_less");
        $clickBtn.click(function(){
            var $that = $(this);
            var val = $that.text();
            if(val=="[展开]"){
                $that.parents(".answer_lit").hide()
                .siblings(".answer_all").show();               
            }else{
                $that.parents(".answer_all").hide()
                .siblings(".answer_lit").show();
            }
        });
    });
  //问题分类链接
	$(function(){
		var $relaBtn = $(".rela_btn");
		$relaBtn.click(function(){
			var $that = $(this);
			var $close = $(".close_bar");
			var top = $that.position().top; 
			var left = $that.position().left; 
			var width = $that.width();
			var height = $that.height();
			$that.parents().find(".rela_box").show(100).css("top",(top+height+2+"px")).find(".topsg").css("left",(left+width/2-10+"px"));
			$close.click(function(){
				$(this).parents(".rela_box").hide(200);
			});
		});
	});
