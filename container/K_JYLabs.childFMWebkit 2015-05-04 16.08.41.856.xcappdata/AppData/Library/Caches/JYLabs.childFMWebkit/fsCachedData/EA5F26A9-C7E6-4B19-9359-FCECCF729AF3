<script type="text/javascript">
		$('.sub2').click(function(){
			window.location.href="/c/202.html";
		});

		$(function(){
			$('.sub1').each(function(){
				$(this).bind('click',function(){
					var self = $(this).next();
					if($(self).html() == null  || $(self).html()==""){
						return;
					}
					var windowHeight =$(window).height();
					    height = $(document).height(),
						width=$(self).children('ul').width()+45,
						node = $('<div id="wmask" style="position:absolute;top:0;left:0;width:100%; min-height:100%; height:'+ height +'px;opacity:0.5;z-index:20;background:#000;"></div>');
					$(self).children('ul').css('max-height',windowHeight);
					$('body').append(node);
					$(self).css({"display":"block"});
					var dHeight = $(self).children('ul').children('li').height();										
					if(dHeight>=windowHeight){
						$(self).css({"height":windowHeight});
					}else{
						$(self).css({"height":dHeight});
					}
					$(self).animate({translate3D:'0, 0, 0'}, 200);
					$('#wmask').click(function(){
						$(this).remove();
						$(self).animate({translate3D:width+'px, 0 ,0'}, 200);
						$(self).css("display","none");
					});
					$(self).children('.mask-close,.arrow_close').click(function(){
						$('#wmask').trigger('click');
					});
				});
			});
		});
</script>

