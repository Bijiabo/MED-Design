    $('#gotop').on('click', function(e) {
	  $.scrollTo({
	    endY: 0, // position to scroll to
	    duration: 300, // duration of animation. 0 for no animation
	    callback: function() { // optional callback to be executed at the end of animation.
	    	$('#gotop').hide();
	    }
	  });
	});  
    //举报
    $(function(){
        var $reportBtn = $(".report_btn,.reportBtn");
        $reportBtn.click(function(){
        	type=$(this).attr("type");
        	typeId=$(this).attr("typeId");
            var $that = $(this);
            var height = $(document).height();
            var $close = $(".reback");
            var html = $('<div id="wmask" style="position:absolute;top:0;left:0;width:100%; min-height:100%; height:'+ height +'px;opacity:0.5;z-index:20;background:#000;"></div>');
            $("body").append(html);
            $(".repor_main").show(200);
            var wrap = document.getElementById('reportList'),
       		items = wrap.querySelectorAll('li');
        	for (var i = 0 , len=items.length; i < len ; i++) {
        		(function (m) {
        			var _this = items[m];
    				var fakeCheck = _this.querySelector('span'),
    					checkBox = _this.querySelector('input');
    				fakeCheck.className='fakeCheck';
    				checkBox.checked=false;
        		})(i);
        	}
            $close.click(function(){
                $(this).parents(".repor_main").hide(200);
                html.remove();
                return false;
            });
        });
    });
    

    //苹果position:fixed兼容问题
    if (/ipad|iphone|mac/i.test(navigator.userAgent)){  
    	$('input').focus(function(){
    	        var $_this = $(this).parents("#ask_box_wrap");
    	        //无键盘时输入框到浏览器窗口顶部距离
    	        var noInputViewHeight = $(window).height() - $_this.height();
    	        //网页正文内容高度
    	        var contentHeight = $(document).height() - $_this.height();
    	        //控制正文内容高度大于一屏，保证输入框固定底部
    	        contentHeight = contentHeight > noInputViewHeight ? contentHeight : noInputViewHeight;
    	        //因为弹出输入法需要时间，需延时处理
    	        setTimeout(function(){
    	                //弹出输入法时滚动条的起始滚动距离
    	                var startScrollY = $(window).scrollTop();
    	                //弹出输入法时输入框到窗口顶部的距离，即到软键盘顶部的起始距离
    	                var inputTopHeight = $_this.offset().top - startScrollY;
    	                //弹出输入法时输入框预期位置，即紧贴软键盘时的位置。因输入框此时处于居中状态，所以其到窗口顶部距离即为需往下移动的距离。
    	                var inputTopPos = $_this.offset().top + inputTopHeight;
    	                //控制div不超出正文范围
    	                inputTopPos = inputTopPos > contentHeight ? contentHeight : inputTopPos;
    	                //设置输入框位置使其紧贴输入框
    	                $_this.css({'position':'absolute', 'top':inputTopPos });
    	                //给窗口对象绑定滚动事件，保证页面滚动时div能吸附软键盘
    	                $(window).bind('scroll', function(){
    	                        //表示此时有软键盘存在，输入框浮在页面上了
    	                        if (inputTopHeight != noInputViewHeight) {
    	                                //页面滑动后，输入框需跟随移动的距离
    	                                var offset = $_this.scrollTop() - startScrollY;
    	                                //输入框移动后位置
    	                                afterScrollTopPos = inputTopPos + offset;
    	                                //设置输入框位置使其紧贴输入框
    	                                $_this.css({'position':'absolute', 'top':afterScrollTopPos });
    	                        }
    	                });
    	        }, 100);
    	}).blur(function(){//输入框失焦后还原初始状态
    	        $("#ask_box_wrap").removeAttr('style');
    	        $(window).unbind('scroll');
    	});
    }
  
    var isBusy = false; 
    var detail = {
       	addClass: function (elements,value){   //addClass(元素，样式值)
   	        if(!elements.className)
   	        {
   	            elements.className=value;
   	        }
   	        else
   	        {
   	            var newClass=elements.className;
   	            newClass+=" ";
   	            newClass+=value;
   	            elements.className=newClass;
   	        }
       	},

       	getXmlHttpObject :function(){
   			  var xmlHttp=null;
   			  try{
   			    // Firefox, Opera 8.0+, Safari
   			    xmlHttp=new XMLHttpRequest();
   			  } catch (e){
   			    // Internet Explorer
   			    try {
   			      xmlHttp=new ActiveXObject("Msxml2.XMLHTTP");
   			    }catch (e){
   			      xmlHttp=new ActiveXObject("Microsoft.XMLHTTP");
   			    }
   			  }
   			  return xmlHttp;
       	},
       	
       	report:function(){
       		var xmlhttp =  detail.getXmlHttpObject();
       		var checkLoginUrl='/checkLogin';
       		xmlhttp.open("POST",checkLoginUrl,false);
       		xmlhttp.onreadystatechange=function(){
       			if(xmlhttp.readyState==4){
                       if(xmlhttp.status==200){
                       	if(xmlhttp.responseText=='null'){
                       		thisHref=window.location.href;
                       		window.location.href="/login?source=" + thisHref;
                       		return;
                       	}else{
                       		var questionId= document.getElementById("qid").value;
	            			var arr = document.getElementsByTagName("input");
	            			var reportList ="";
	            			for(var i=0;i<arr.length;i++){
	            			   if(arr[i].type == "checkbox" && arr[i].checked){
	            				   reportList += arr[i].value + "-";
	            			    }
	            			}
	            			if(reportList == ""){
	            				alert("请选择举报原因！");
	            				return;
	            			}
	            			var settings=new Object();
	            			settings.callBackFunction = detail.reportCallBack;
	            			settings.url ="/question/reportnew";
	            			settings.methodtype="POST";
	            			settings.submit_param={"reportList":reportList,"questionId":questionId,"type":type,"typeId":typeId};
	            			post_ajax_request(settings);
	            			$(".repor_main").hide(200);
	                        $("#wmask").remove();
                       	}
                       }
                    }
       		};
       		xmlhttp.send(); 
       	},
     reportCallBack : function(data){
    	var obj=eval('(' + data + ')');
 		alert(obj.desc);
    	},
    	
       	//设置好、中、差评
       	setAppraise : function(aid,btn_a,type){
       		if(isBusy)return;
       		isBusy = true;
   			var url = "/answer/sappraise?aid="+aid+"&type="+type;
   			var xmlhttp =  detail.getXmlHttpObject();
   			if(xmlhttp){
       			xmlhttp.open("POST",url,false);
       		}
       		xmlhttp.onreadystatechange=function(){   
                 if(xmlhttp.readyState==4){
                    if(xmlhttp.status==200){
	                  	btn_a.parentNode.style.display="none";//隐藏好、中、差评的div
	                  	//显示苹果的a标签
	                  	var showAppleico=document.getElementById(aid);
	                  	switch (type){
	                  	case 1:showAppleico.className="comment_ico";showAppleico.style.display="block";break;
	                  	case 0:showAppleico.className="comment_ico normal_ico";showAppleico.style.display="block";break;
	                  	case -1:showAppleico.className="comment_ico bad_ico";showAppleico.style.display="block";break;
	                  	}
                     	var objData = eval("("+xmlhttp.responseText+")");
                     	//如果未送出悬赏，提示用户是否付出悬赏
                     	if(objData.succ == "Y"){
                     		if(type==1 && objData.jsonData){
                     			top.location.href = "/answer/prebest?aid="+aid+"&qid="+$base.$id("qid").value;
                     		}
                     	}else{
                     		alert("操作失败");
                     	}
                     	isBusy = false;
                     }      
                   } 
                 };
           xmlhttp.send();
           return;
       	},
       	
       	//点赞
       	doPraised:function(id,that,isPraised,isMine){
       		if(isMine){
       			alert("自己的回答不能赞！");
       			return false;
       		}
       		//已经赞过
       		if(isPraised){
	        		alert("已赞");
       			return false;
       		}
       		var xmlhttp =  detail.getXmlHttpObject();
       		var checkLoginUrl='/checkLogin';
       		xmlhttp.open("POST",checkLoginUrl,false);
       		xmlhttp.onreadystatechange=function(){
       			if(xmlhttp.readyState==4){
                       if(xmlhttp.status==200){
                       	if(xmlhttp.responseText=='null'){
                       		thisHref=window.location.href;
                       		window.location.href="/login?source=" + thisHref;
                       		return;
                       	}else{
   			         		var url = "/answer/praised?answerId="+id;
                       		var xhr = detail.getXmlHttpObject();
                       		xhr.open("POST",url,false);
                       		xhr.onreadystatechange=(function(that,target){
                   				return function(){
               		                if(xhr.readyState==4){
               		                    if(xhr.status==200){
               		                    	var rspText=xhr.responseText;
               		                    	var obj = eval('('+rspText+')');
               		                    	if(obj && obj.succ == 'Y' && obj.jsonData>0){
               		                    		target.removeAttribute("onclick");
               		                    		target.innerHTML = '<em></em>'+obj.jsonData;
               		                    	}else{
               		                    		alert("不能赞自己的回答!");
               		                    	}
               		                    }
               		                 }
               		            };
                               })(this,that);
                       		xhr.send();
                       	}
                       }
                    }
       		};
       		xmlhttp.send(); 
       		return ;
       	},

       	toQuestionPic:function(qid){
       		window.location.href = "/question/sqp?questionId="+qid;
       	}
       };
   
</script>
<script>
	//图片自适应
function autoPic(){
  	var $imgTs = $(".rb_list_02"),
      	$imgTs2 = $(".rb_list_01"),
      	$item = $imgTs.find(".read_ls_item"),
      	img = $item.find("img"),
      	img2 = $imgTs2.find("img"),
      	img3 = $(".wb2_ad03_wrap").find("img"),
      	topimg = $(".top_adv").find("img");
      	var width = (window.innerWidth > 0) ? window.innerWidth : screen.width,
      		img2W = width-20,
      		img2H = img2W/600*260,
       		imgW = (width-30)/2,
      		imgH = imgW/290*126,
      		topimgH = width/640*110;
      		img2.css({"width":img2W,"height":img2H});
      		img.css({"width":imgW,"height":imgH});
      		img3.css({"width":imgW,"height":imgH});
      		$item.css("width",imgW);
      		topimg.css({"width":width,"height":topimgH});
}; 

</script>








