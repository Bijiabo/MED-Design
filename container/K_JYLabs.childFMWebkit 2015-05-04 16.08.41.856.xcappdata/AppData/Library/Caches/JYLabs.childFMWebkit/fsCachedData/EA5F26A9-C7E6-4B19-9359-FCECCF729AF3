<script>
//验证登录
var logins = new Object();
logins.callBackFunction = checkLogin;
logins.url ="/checkLogin";
logins.methodtype="POST";
post_ajax_request(logins);
var logout = $("#logout");
var index_login = $("#index_login");
var thisHref=window.location.href;
var name=null;
//满足可以搜索时的回调方法
function checkLogin(data){
	if(data=="null"){
		logout.attr("href","/login?source=" + thisHref);
		index_login.attr("href","/login?source=" + thisHref);
		logout.html("登录");
	}else{
		logout.attr("href","/logout");
		logout.html("退出");
		index_login.attr("href","javascript:void(0);");
		if(!(/.*m.iask.sina.com.cn\/[a-zA-Z0-9-]+/i.test(thisHref))){
			var user = eval('(' + data + ')');
			index_login.addClass("login_on");
			name = user.nickname;
			if($base.getLength(name)>4){
				name = name.substr(0,3)+"....";
			}
		}
		//验证登录
		var settings = new Object();
		settings.callBackFunction = setCount;
		settings.url ="/msg/gurmc";
		settings.methodtype="POST";
		post_ajax_request(settings);
		
	}
}
//设置用户信息框
function setCount(text){
	var msg = eval('(' + text + ')');
	if(msg.jsonData.count>0){
		name = name+"<span>"+msg.jsonData.count+"</span>";
	}
	index_login.html(name);
}
</script>

